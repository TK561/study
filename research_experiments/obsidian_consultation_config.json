{
  "system_config": {
    "version": "1.0",
    "created_at": "2025-07-02",
    "description": "Configuration for Obsidian-Gemini AI Consultation System"
  },
  "paths": {
    "obsidian_vault": "/mnt/c/Desktop/Obsidian/study",
    "research_experiments": "/mnt/c/Desktop/Research/research_experiments",
    "output_directory": "./obsidian_consultation_output",
    "backup_directory": "./obsidian_backups"
  },
  "gemini_api": {
    "simulation_mode": true,
    "api_endpoint": "https://generativelanguage.googleapis.com/v1beta/models/gemini-pro:generateContent",
    "timeout": 30,
    "retry_attempts": 3
  },
  "analysis_parameters": {
    "file_types_to_analyze": [".md", ".json", ".py", ".html"],
    "recent_activity_days": 7,
    "deep_nesting_threshold": 4,
    "large_vault_threshold": 1000
  },
  "consultation_context": {
    "research_domain": "AI/ML Image Classification Research",
    "experiment_scale": "Large Scale (5000+ experiments)",
    "current_challenges": [
      "Managing massive experimental data",
      "Maintaining research continuity",
      "Optimizing knowledge discovery",
      "Streamlining workflow efficiency"
    ],
    "primary_goals": [
      "Improve research organization",
      "Enhance knowledge discoverability", 
      "Reduce search time",
      "Automate routine tasks"
    ]
  },
  "rule_generation": {
    "folder_structure": {
      "max_depth": 4,
      "phase_based_organization": true,
      "temporal_organization": true,
      "cross_reference_system": true
    },
    "tagging_system": {
      "semantic_tagging": true,
      "automated_tagging": true,
      "tag_hierarchy": true,
      "tag_cleanup": true
    },
    "automation_rules": {
      "file_routing": true,
      "timeline_integration": true,
      "knowledge_graph": true,
      "progress_tracking": true
    }
  },
  "implementation": {
    "default_dry_run": true,
    "backup_before_changes": true,
    "incremental_implementation": true,
    "validation_checks": true
  },
  "reporting": {
    "generate_json": true,
    "generate_markdown": true,
    "generate_implementation_guide": true,
    "include_visualizations": false
  },
  "templates": {
    "research_phases": {
      "Phase1_Foundation": {
        "description": "Initial research and basic experiments (0-1000 experiments)",
        "subfolders": ["基礎実験", "初期分析", "メモ"],
        "tags": ["#Phase1", "#基礎", "#初期"],
        "file_patterns": ["*baseline*", "*initial*", "*foundation*"]
      },
      "Phase2_Development": {
        "description": "Advanced development and optimization (1000-3000 experiments)",
        "subfolders": ["最適化", "ベンチマーク", "実装"],
        "tags": ["#Phase2", "#開発", "#最適化"],
        "file_patterns": ["*optimization*", "*development*", "*enhanced*"]
      },
      "Phase3_Validation": {
        "description": "Validation and real-world testing (3000-5000 experiments)",
        "subfolders": ["検証", "実世界テスト", "性能評価"],
        "tags": ["#Phase3", "#検証", "#実世界"],
        "file_patterns": ["*validation*", "*real_world*", "*performance*"]
      },
      "Phase4_Finalization": {
        "description": "Final experiments and documentation (5000+ experiments)",
        "subfolders": ["最終実験", "ドキュメント", "結論"],
        "tags": ["#Phase4", "#最終", "#完成"],
        "file_patterns": ["*final*", "*conclusion*", "*complete*"]
      }
    },
    "tag_taxonomy": {
      "research_domains": {
        "prefix": "domain",
        "tags": ["#domain/image_classification", "#domain/wordnet", "#domain/performance", "#domain/ml"]
      },
      "experiment_types": {
        "prefix": "type",
        "tags": ["#type/baseline", "#type/optimization", "#type/validation", "#type/comparison"]
      },
      "status": {
        "prefix": "status",
        "tags": ["#status/active", "#status/completed", "#status/archived", "#status/failed"]
      },
      "priority": {
        "prefix": "priority",
        "tags": ["#priority/critical", "#priority/high", "#priority/medium", "#priority/low"]
      },
      "methodology": {
        "prefix": "method",
        "tags": ["#method/supervised", "#method/unsupervised", "#method/reinforcement", "#method/hybrid"]
      }
    }
  },
  "automation_scripts": {
    "file_organizer": {
      "enabled": true,
      "script_name": "auto_file_organizer.py",
      "schedule": "daily",
      "rules": [
        "Move files based on experiment count thresholds",
        "Apply phase-based folder organization",
        "Update cross-reference indexes"
      ]
    },
    "tag_manager": {
      "enabled": true,
      "script_name": "auto_tag_manager.py",
      "schedule": "weekly",
      "rules": [
        "Analyze content for semantic tags",
        "Apply performance-based tags",
        "Clean up duplicate tags"
      ]
    },
    "timeline_updater": {
      "enabled": true,
      "script_name": "timeline_updater.py",
      "schedule": "daily",
      "rules": [
        "Update research timeline",
        "Track milestone achievements",
        "Generate progress reports"
      ]
    },
    "knowledge_graph_builder": {
      "enabled": true,
      "script_name": "knowledge_graph_builder.py",
      "schedule": "weekly",
      "rules": [
        "Detect experiment relationships",
        "Update knowledge graph",
        "Generate insight reports"
      ]
    }
  },
  "monitoring": {
    "health_checks": {
      "vault_integrity": true,
      "link_validation": true,
      "tag_consistency": true,
      "file_organization": true
    },
    "performance_metrics": {
      "search_time": true,
      "file_discovery_rate": true,
      "organization_efficiency": true,
      "automation_success_rate": true
    },
    "alerts": {
      "broken_links": true,
      "missing_tags": true,
      "organization_violations": true,
      "automation_failures": true
    }
  }
}