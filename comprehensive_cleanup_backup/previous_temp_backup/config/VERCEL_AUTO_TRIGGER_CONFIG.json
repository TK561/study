{
  "enabled": true,
  "auto_deploy_on_file_change": true,
  "auto_deploy_on_command": true,
  "cooldown_seconds": 30,
  "watch_patterns": [
    "*.html",
    "*.js",
    "*.css",
    "*.json",
    "*.py"
  ],
  "ignore_patterns": [
    "node_modules/*",
    ".git/*",
    "*.log",
    "*.tmp",
    "VERCEL_*.json",
    ".vercel_backups/*"
  ],
  "trigger_actions": {
    "file_change": "smart_deploy",
    "command_detected": "smart_deploy",
    "error_detected": "auto_fix"
  },
  "monitoring_settings": {
    "file_monitoring": true,
    "command_monitoring": true,
    "git_hooks": true,
    "polling_interval": 5
  },
  "deployment_conditions": {
    "require_significant_changes": true,
    "min_files_changed": 1,
    "exclude_temp_files": true
  }
}